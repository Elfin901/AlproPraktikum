package Modul1_Arrays;
public class NewClass {
    public static void main(String[] args) {
        double jamkerjaperminggu  = 40;
        double tarifperjam = 25000;
        double bonuskinerjaperbulan = 500000;
        double tunjanganmakanperbulan = 200000;
        double potonganpajak = 0.10;
        
        double gajibrutoperminggu = jamkerjaperminggu * tarifperjam;
        double gajibrutoperbulan = gajibrutoperminggu * 4 + bonuskinerjaperbulan;
        double pajak = gajibrutoperbulan * potonganpajak;
        double gajibersihperbulan = gajibrutoperbulan - pajak + tunjanganmakanperbulan;
        
        System.out.println("Rincian Gaji Karyawan:");
        System.out.println("Jam Kerja Perminggu:" + jamkerjaperminggu + "jam");
        System.out.println("Tarif Per Jam: Rp" + tarifperjam);
        System.out.println("Bonus Kinerja Perbulan: Rp" + bonuskinerjaperbulan);
        System.out.println("Tunjangan Makan Perbulan: Rp" + potonganpajak*100 + "%");
        
    }
        
    
}
