    private void KonversiActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String input = inputSuhu.getText();
        String pilihanAwal = Suhu.getSelectedItem().toString();
        String pilihanAkhir = suhuAkhir.getSelectedItem().toString();
        try {
            double isi = Double.parseDouble(input);
            switch (pilihanAwal) {
                case "Fahrenheit":
                    switch (pilihanAkhir) {
                        case "Fahrenheit":
                            LbHasil.setText(input);
                            break;
                        case "Reamur":
                            double ddd = Convert.FahrenheittoReamur(isi);
                            String dde = String.valueOf(ddd);
                            LbHasil.setText(dde);
                            break;
                        case "Celcius":
                            double ddf = Convert.FahrenheittoCelcius(isi);
                            String ddg = String.valueOf(ddf);
                            LbHasil.setText(ddg);
                            break;
                        case "Kelvin":
                            double ddh = Convert.FahrenheittoKelvin(isi);
                            String ddi = String.valueOf(ddh);
                            LbHasil.setText(ddi);
                            break;
                        default:
                            throw new AssertionError();
                    }
                    break;
                case "Celcius":
                    switch (pilihanAkhir) {
                        case "Celcius":
                            LbHasil.setText(input);
                            break;
                        case "Reamur":
                            double ddd = Convert.CelciustoReamur(isi);
                            String dde = String.valueOf(ddd);
                            LbHasil.setText(dde);
                            break;
                        case "Fahrenheit":
                            double ddf = Convert.CelciustoFahrenheit(isi);
                            String ddg = String.valueOf(ddf);
                            LbHasil.setText(ddg);
                            break;
                        case "Kelvin":
                            double ddh = Convert.CelciustoKelvin(isi);
                            String ddi = String.valueOf(ddh);
                            LbHasil.setText(ddi);
                            break;
                        default:
                            throw new AssertionError();
                    }
                    break;
                case "Reamur":
                    switch (pilihanAkhir) {
                        case "Reamur":
                            LbHasil.setText(input);
                            break;
                        case "Fahrenheit":
                            double ddd = Convert.ReamurtoFahrenheit(isi);
                            String dde = String.valueOf(ddd);
                            LbHasil.setText(dde);
                            break;
                        case "Celcius":
                            double ddf = Convert.ReamurtoCelcius(isi);
                            String ddg = String.valueOf(ddf);
                            LbHasil.setText(ddg);
                            break;
                        case "Kelvin":
                            double ddh = Convert.ReamurtoKelvin(isi);
                            String ddi = String.valueOf(ddh);
                            LbHasil.setText(ddi);
                            break;
                        default:
                            throw new AssertionError();
                    }
                    break;
                case "Kelvin":
                    switch (pilihanAkhir) {
                        case "Kelvin":
                            LbHasil.setText(input);
                            break;
                        case "Reamur":
                            double ddd = Convert.KelvintoReamur(isi);
                            String dde = String.valueOf(ddd);
                            LbHasil.setText(dde);
                            break;
                        case "Celcius":
                            double ddf = Convert.KelvintoCelcius(isi);
                            String ddg = String.valueOf(ddf);
                            LbHasil.setText(ddg);
                            break;
                        case "Fahrenheit":
                            double ddh = Convert.KelvintoFahrenheit(isi);
                            String ddi = String.valueOf(ddh);
                            LbHasil.setText(ddi);
                            break;
                        default:
                            throw new AssertionError();
                    }
                    break;
                default:
                    throw new AssertionError();
            }
        } catch (Exception e) {
        }
    }                                        

